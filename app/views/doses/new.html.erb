<div class="container">
  <div class="row">
  <h2>Add a dose to <%= @cocktail.name %></h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.input :ingredient, collection: Ingredient.all %>
      <%= f.submit "Add dose", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>