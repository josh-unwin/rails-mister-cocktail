
<div class="container">
  <div class="row my-5 mx-1">
  <h1><%= @title %></h1>
  </div>
  <div class="row my-5 mx-1">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="cocktail-card">
          <%= cl_image_tag cocktail.photo %>
              <div class="cocktail-card-infos">
                <div>
                  <h2><%= cocktail.name %></h2>
                  <% cocktail.doses.each_with_index do |dose, index| %>
                    <% if index <= 1 %>
                      <p><%= dose.description %>:   <%= dose.ingredient.name %></p>
                    <% end %>
                  <% end %>
                </div>
                <% if cocktail.doses.length > 2 %>
                  <p class="see_all">See all...</p>
                <% end %>
              </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>